<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-3.2.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://www.springframework.org/schema/mvc 
		http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

	<bean id="poiService" class="org.mercury.poi.service.PoiService"/>
	<bean id="securityService" class="org.mercury.poi.service.SecurityService" autowire="byName"/>
	
	<bean id="dao" class="org.mercury.poi.dao.Dao" autowire-candidate="true"/>
	<bean id="securityDao" class="org.mercury.poi.dao.Dao" autowire-candidate="true"/>

</beans>